<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="edi.course"
      metal:use-macro="context/main_template/macros/master">
<body>
<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

    <div class="row">
      <div class="col-xs-12 col-sm-12">
        <div tal:replace="structure provider:plone.abovecontenttitle" />
      </div>
    </div>


    <div class="row">
    <div class="col-xs-12 col-sm-12">

    <h2 tal:content="context/title"/>
    <p tal:condition="context/description" class="documentDescription" tal:content="context/description"/>

    <p tal:condition="context/text" tal:replace="structure context/text/output"/>

    </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-12">
        <h3>Checkliste</h3>
      </div>
    </div>

    <form tal:attributes="action view/form_url">

    <div class="row" tal:repeat="aussage context/aussagen">
      <div class="col-xs-8 col-sm-8">
        <p><strong tal:content="aussage/aussage"/></p>
      </div>
      <div class="col-xs-4 col-sm-4">
        <select tal:attributes="name aussage/aussage" class="form-control">
          <option>bitte auswÃ¤hlen</option>
          <option required tal:repeat="option context/optionen" tal:content="option/option"></option>
        </select>
      </div>
      <div class="col-xs-12 col-sm-12">
        <hr>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-12">
        <button type="submit" class="btn btn-primary">Speichern</button>
      </div>
    </div>

    </form>

    <div class="row">
      <div class="col-xs-12 col-sm-12">
        <div tal:replace="structure provider:plone.belowcontentbody" />
      </div>
    </div>

    </tal:main-macro>
</metal:main>
<body>
</html>
