    <form action="" tal:attributes="action view/get_action">
        <div tal:repeat="notiz view/get_notizen" class="form-group">
            <label for="exampleFormControlInput1" tal:attributes="for notiz/name" tal:content="notiz/description">Frage, Aufgabe, These</label>
